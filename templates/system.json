{
  "_id": "{{@ system @}}",
  "oauth2": {
    "access_token": "$SECRET(oauth_access_token)",
    "client_id": "$SECRET(oauth_client_id)",
    "client_secret": "$SECRET(oauth_client_secret)",
    "refresh_token": "$SECRET(oauth_refresh_token)",
    "token_url": "{{@ token_url @}}"
  },
  "operations": {
    "delete": {
      "method": "DELETE",
      "url": "{{ properties.endpoint }}/{{ entity.id }}"
    },
    "insert": {
      "id_expression": "{{ id }}",
      "method": "POST",
      "url": "{{ properties.endpoint }}"
    },
    "list": {
      "id_expression": "{{ id }}",
      "method": "GET",
      "payload_property": "$items",
      "url": "{{ properties.endpoint }}"
    },
    "lookup": {
      "method": "GET",
      "url": "{{ properties.endpoint }}/{{ entity.id }}"
    },
    "release": {
      "id_expression": "{{ id }}",
      "method": "POST",
      "url": "{{ properties.endpoint }}/{{ entity.id}}/release"
    },
    "update": {
      "method": "PUT",
      "url": "{{ properties.endpoint }}/{{ entity.id }}"
    }
  },
  "type": "system:rest",
  "url_pattern": "https://api.accounting.sage.com/v3.1/%s",
  "verify_ssl": true
}